<?xml version="1.0"?>
<robot name="ai_simplewall">

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 -1"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
      <material name="wall_color">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 -1"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <link name="wall1">
    <visual>
      <origin rpy="0 0 0" xyz="0 -2 0.5"/>
      <geometry>
        <box size="4 0.1 1"/>
      </geometry>
      <material name="wall_color"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 -2 0.5"/>
      <geometry>
        <box size="4 0.1 1"/>
      </geometry>
    </collision>
  </link>

  <link name="wall2">
    <visual>
      <origin rpy="0 0 0" xyz="2 0 0.5"/>
      <geometry>
        <box size="0.1 4 1"/>
      </geometry>
      <material name="wall_color"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="2 0 0.5"/>
      <geometry>
        <box size="0.1 4 1"/>
      </geometry>
    </collision>
  </link>

  <link name="wall3">
    <visual>
      <origin rpy="0 0 0" xyz="0 2 0.5"/>
      <geometry>
        <box size="4 0.1 1"/>
      </geometry>
      <material name="wall_color"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 2 0.5"/>
      <geometry>
        <box size="4 0.1 1"/>
      </geometry>
    </collision>
  </link>


  <joint name="wall1_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="wall1"/>
  </joint>

  <joint name="wall2_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="wall2"/>
  </joint>

  <joint name="wall3_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="wall3"/>
  </joint>

</robot>
